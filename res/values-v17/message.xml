<?xml version="1.0" encoding="UTF-8"?>
<resources>

	<style name="MessageExtras">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_alignParentEnd">true</item>
		<item name="android:layout_centerVertical">true</item>
	</style>

	<style name="MessageContent" parent="Widget.Silence.LinearLayout.Vertical">
	    <item name="android:layout_toStartOf">@+id/message_extras</item>
	</style>

	<style name="_MessageText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/silent_white</item>
		<item name="android:textColorLink">@color/text_link</item>
		<item name="android:textSize">@dimen/text_xlarge</item>
		<item name="android:text">@string/sample_message</item>
		<item name="android:layout_toStartOf">@+id/message_extras</item>
	</style>

</resources>
