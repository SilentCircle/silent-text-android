<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="_Theme.Silent" parent="@android:style/Theme.Holo">
		<item name="android:windowBackground">@drawable/bg_window_dark</item>
		<item name="android:actionBarStyle">@style/Widget.Silent.ActionBar</item>
		<item name="android:actionModeBackground">@drawable/bg_actionbar</item>
		<item name="android:selectableItemBackground">@drawable/bg_selectable</item>
		<item name="android:actionDropDownStyle">@style/Widget.Silent.Spinner.DropDown.ActionBar</item>
		<item name="android:popupMenuStyle">@style/Widget.Silent.PopupMenu</item>
	</style>

	<style name="Theme.Silent" parent="_Theme.Silent"/>

	<style name="Theme.Silent.Fullscreen">
		<item name="android:windowActionBarOverlay">true</item>
	</style>

	<style name="Theme.Silent.NoActionBar" parent="@android:style/Theme.Holo.NoActionBar">
		<item name="android:windowBackground">@drawable/bg_window_dark</item>
	</style>

	<style name="Widget.Silent.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:backgroundSplit">@drawable/bg_actionbar_split</item>
		<item name="android:background">@drawable/bg_actionbar</item>
	</style>

	<style name="Widget.Silent.Spinner.DropDown.ActionBar" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
		<item name="android:dropDownSelector">@drawable/bg_selectable</item>
	</style>

	<style name="Widget.Silent.PopupMenu" parent="@android:style/Widget.Holo.PopupMenu"/>

	<style name="Widget.Silent.ListView.DropDown" parent="@android:style/Widget.Holo.ListView.DropDown">
		<item name="android:listSelector">@drawable/bg_selectable</item>
	</style>

</resources>
